import java.util.Scanner;

public class Exemplo01 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int opc = 0;
		while  ( /* Condição */ ) {
			//bloco de execução
			System.out.println("Digite o valor entre 1 e 15:");
			opc = sc.nextInt()
		}
		System.out.println("Fim do jogo");
		sc.close();
	}

}
