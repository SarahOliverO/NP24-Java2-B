package br.com.senaisp.bauru.sarah.secao05;

import java.util.Scanner;
import javax.swing.JOptionPane;

public class ExemploScanner02 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scn;
		String data = JOptionPane.showInputDialog(null, "Digite uma data", "Sistema de Data", JOptionPane.QUESTION_MESSAGE);
		scn = new Scanner(data);
		scn.useDelimiter("/");
		
	}

}
